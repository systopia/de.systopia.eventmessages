<?xml version="1.0"?>
<extension key="de.systopia.eventmessages" type="module">
  <file>eventmessages</file>
  <name>Custom Event Communication</name>
  <description>Provides a more flexible way of sending emails to event participant.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>SYSTOPIA</author>
    <email>endres@systopia.de</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/systopia/de.systopia.eventmessages</url>
    <url desc="Documentation">https://docs.civicrm.org/eventmessages/en/latest/</url>
    <url desc="Support">https://github.com/systopia/de.systopia.eventmessages/issues</url>
    <url desc="Licensing">https://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-02-21</releaseDate>
  <version>1.4-beta2</version>
  <develStage>beta</develStage>
  <compatibility>
    <ver>5.68</ver>
  </compatibility>
  <comments/>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
    <psr0 prefix="CRM_" path="."/>
  </classloader>
  <civix>
    <namespace>CRM/Eventmessages</namespace>
    <format>23.02.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
    <mixin>entity-types-php@1.0.0</mixin>
  </mixins>
  <upgrader>CRM_Eventmessages_Upgrader</upgrader>
</extension>
